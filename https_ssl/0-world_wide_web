#!/usr/bin/env bash
# Displays information about DNS subdomains of a given domain

# Function to query a subdomain
get_subdomain_info() {
    local domain="$1"
    local subdomain="$2"
    local full_sub="${subdomain}.${domain}"

    result=$(dig "$full_sub" | grep -A1 "ANSWER SECTION:" | tail -n1)

    record_type=$(echo "$result" | awk '{print $4}')
    destination=$(echo "$result" | awk '{print $5}')

    if [[ -n "$record_type" && -n "$destination" ]]; then
        echo "The subdomain ${subdomain} is a ${record_type} record and points to ${destination}"
    fi
}

# Main script logic
domain="$1"
subdomain="$2"

# Validate input
if [[ -z "$domain" ]]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

# List of default subdomains
subs=("www" "lb-01" "web-01" "web-02")

# If a subdomain is provided, check only that one
if [[ -n "$subdomain" ]]; then
    get_subdomain_info "$domain" "$subdomain"
else
    for s in "${subs[@]}"; do
        get_subdomain_info "$domain" "$s"
    done
fi
