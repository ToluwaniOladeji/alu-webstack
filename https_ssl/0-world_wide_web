#!/usr/bin/env bash
# Displays information about DNS subdomains of a given domain using dig and awk

get_subdomain_info() {
    local domain="$1"
    local subdomain="$2"
    local full_sub="${subdomain}.${domain}"

    # Extract the A record line properly
    local result
    result=$(dig "$full_sub" | grep -A1 "ANSWER SECTION:" | tail -n1)

    # Extract record type and destination using awk
    local record_type
    record_type=$(echo "$result" | awk '{print $4}')
    local destination
    destination=$(echo "$result" | awk '{print $5}')

    if [[ -n "$record_type" && -n "$destination" ]]; then
        echo "The subdomain ${subdomain} is a ${record_type} record and points to ${destination}"
    fi
}

domain="$1"
subdomain="$2"

if [[ -z "$domain" ]]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

# Default subdomains
subs=("www" "lb-01" "web-01" "web-02")

# Check either specific subdomain or all four
if [[ -n "$subdomain" ]]; then
    get_subdomain_info "$domain" "$subdomain"
else
    for s in "${subs[@]}"; do
        get_subdomain_info "$domain" "$s"
    done
fi
