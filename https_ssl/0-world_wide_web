#!/usr/bin/env bash
# Displays information about DNS subdomains of a given domain using dig and awk

get_subdomain_info() {
    local domain="$1"
    local subdomain="$2"
    local full_sub="${subdomain}.${domain}"

    # Use dig and awk to cleanly extract the A record
    local result
    result=$(dig "$full_sub" A | awk '/IN[[:space:]]+A/ {print $5; exit}')

    if [[ -n "$result" ]]; then
        echo "The subdomain ${subdomain} is a A record and points to ${result}"
    else
        echo "The subdomain ${subdomain} could not be resolved"
    fi
}

domain="$1"
subdomain="$2"

if [[ -z "$domain" ]]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

subs=("www" "lb-01" "web-01" "web-02")

if [[ -n "$subdomain" ]]; then
    get_subdomain_info "$domain" "$subdomain"
else
    for s in "${subs[@]}"; do
        get_subdomain_info "$domain" "$s"
    done
fi
